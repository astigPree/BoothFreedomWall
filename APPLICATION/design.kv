#:import chex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window
#:import Clock kivy.clock.Clock

MainWindow:
	
	tool_bar : tool_bar
	category_bar : category_bar
	post_feeds : post_feeds
	refresh_button : refresh_button
	next_page_button : next_page_button
	
	CustomToolBar:
		id : tool_bar
		size_hint : None , None
		height : Window.size[1] * 0.088
		width : Window.size[0]
		pos : (0 , Window.size[1] - self.height )
	
	CategoryBar:
		id : category_bar
		size_hint : None , None
		height : Window.size[1] * 0.05
		width : Window.size[0] * 0.45
		pos : ( (Window.size[0] - self.width ) / 2 , (Window.size[1] - self.height - tool_bar.height - (Window.size[1] * 0.015)) )
	
	PostFeeds:
		id : post_feeds
		size_hint : None , None
		height : Window.size[1] * 0.79
		width : Window.size[0] * 0.95
		pos : ( (Window.size[0] - self.width  ) / 2 , Window.size[1] * 0.02 )
	
	MDFloatingActionButton:
		id : refresh_button
		icon : "refresh"
		icon_size : min(Window.size) * 0.11
		theme_icon_color: "Custom"
		icon_color : chex("#FFFFFF")
		md_bg_color: chex("#7F0F0F")
		pos : ( Window.size[0] - self.width - (self.width * 0.3) ,  Window.size[1] * 0.04)
	
		on_release:
			Clock.schedule_once(root.downloadDataFromServer)
	
	MDFloatingActionButton:
		id : next_page_button
		icon : "page-next-outline"
		icon_size : min(Window.size) * 0.11
		theme_icon_color: "Custom"
		icon_color : chex("#FFFFFF")
		md_bg_color: chex("#7F0F0F")
		pos : ( Window.size[0] - refresh_button.width - self.width - (self.width * 0.6) ,  Window.size[1] * 0.04)
	
		on_release:
			root.downloading_view.open()

<ApplicationSettings>:
	overlay_color : ( 0 , 0 , 0 , 0.05)
	background_color :  ( 0 , 0 , 0 , 0)
	size_hint : 1 , 1
	
	MDBoxLayout:
		pos_hint : { "center_x" : 0.5 , "center_y" : 0.5 }
		size_hint : 0.94 , 0.65
		md_bg_color : chex("#7F0F0F")
		radius : ((min(self.size) * 0.06),)
		orientation : "vertical"
		padding : dp(10)
		spacing : dp(5)
		
		Label:
			size_hint : 1 , 0.13
			text : "INFORMATION"
			font_name : "lato_bold"
			font_size : min(self.size) * 0.36
			color : chex("#6E1616")
			
			canvas.before:
				Color :
					rgba : chex("#FFFFFF")
				RoundedRectangle:
					pos : self.pos
					size : self.size
					radius : ((min(self.size) * 0.3),)
			
		
		ScrollView:
			size_hint : 1 , 0.87
			
			MDGridLayout:
				adaptive_height : True
				cols : 1
			
		
	

<DownloadingView>:
	overlay_color : ( 0 , 0 , 0 , 0.05)
	background_color :  ( 0 , 0 , 0 , 0)
	size_hint : 1 , 1
	
	info_text : info_text
	
	MDBoxLayout:
		pos_hint : { "center_x" : 0.5 , "center_y" : 0.5 }
		size_hint : 0.85 , 0.2
		md_bg_color : chex("#7F0F0F")
		radius : (30,)
		orientation : "vertical"
		padding : dp(10)
		
		Label:
			id : info_text
			size_hint : 1 , 0.8
			text : ". . . D O W N L O A D I N G . . ."
			font_size : min(self.size) * 0.2
			font_name : "lato_italic"
		
		MDRaisedButton:
			size_hint : 0.5 , 0.3
			pos_hint : { "center_x"  : 0.5 }
			md_bg_color : chex("#FFFFFF")
			theme_text_color : "Custom"
			text_color : chex("#7F0F0F")
			text : "RE-CONNECT"
			font_name : "lato_bold"
			font_size : min(self.size) * 0.45
			opacity : 1 if root.hasAnError else 0
		
		
		

<CategorySelections>:
	overlay_color : ( 0 , 0 , 0 , 0.05)
	background_color :  ( 0 , 0 , 0 , 0)
	size_hint : 1 , 1
	
	MDBoxLayout:
		pos_hint : { "center_x" : 0.5 , "center_y" : 0.5 }
		size_hint : 0.83 , 0.3
		md_bg_color : chex("#7F0F0F")
		radius : ((min(self.size) * 0.065),)
		orientation : "vertical"
		
		Widget :
			size_hint : 1 , 0.03
						
		Label:
			size_hint : 1 , 0.2
			text : "SELECT CATEGORY"
			font_name : "lato_bold"
			font_size : min(self.size) * 0.45
		
		Label:
			size_hint : 1 , 0.12
			font_name : "lato_regular"
			text : "after selecting, click refresh button"
			font_size : min(self.size) * 0.42
		
		Widget :
			size_hint : 1 , 0.05
		
		MDGridLayout:
			size_hint : 1 , 0.6
			cols : 2
			rows : 2
			padding : dp(15)
			spacing : dp(10)
			
			CategoryButton:
				size_hint : 1 , 1
				text_color : chex("#7F0F0F") if self.text == root.category else chex("#FFFFFF") 
				md_bg_color : chex("#FFFFFF") if self.text == root.category else chex("#CF9797")
				text : "LOVE"
				
				on_release :
					root.category = self.text
					root.dismiss()
				
			CategoryButton:
				size_hint : 1 , 1
				text_color : chex("#7F0F0F") if self.text == root.category else chex("#FFFFFF") 
				md_bg_color : chex("#FFFFFF") if self.text == root.category else chex("#CF9797")
				text : "SCHOOL"
				
				on_release :
					root.category = self.text
					root.dismiss()
				
			CategoryButton:
				size_hint : 1 , 1
				text_color : chex("#7F0F0F") if self.text == root.category else chex("#FFFFFF") 
				md_bg_color : chex("#FFFFFF") if self.text == root.category else chex("#CF9797")
				text : "LIFE"
				
				on_release :
					root.category = self.text
					root.dismiss()
				
			CategoryButton:
				size_hint : 1 , 1
				text_color : chex("#7F0F0F") if self.text == root.category else chex("#FFFFFF") 
				md_bg_color : chex("#FFFFFF") if self.text == root.category else chex("#CF9797")
				text : "RANDOM"
				
				on_release :
					root.category = self.text
					root.dismiss()
				

